/* pages/login/login.wxss */
.container{
  background: #f5f5f5;
}
.title{
  margin: 24rpx 0 48rpx 0;
  justify-content: center;
}
.title text{
  font-size: 36rpx; color: #9d9d9d;
}
.login{
  justify-content: center;
}
.login > view{
  width: 660rpx;
  align-items: center;
  color: #646464;
}
.login label{
  width: 700rpx; height: 72rpx;
  margin-bottom: 24rpx;
}
.login :nth-of-type(3){
  margin-bottom: 64rpx;
}
.login text{
  display: inline-block;
  width: 150rpx; height: 72rpx; line-height: 72rpx;
  text-align: right;
  margin-right: 24rpx;
}
.login input{
  width: 480rpx; height: 72rpx;
  border-radius: 4px;
  background: #fff;
  display: inline-block;
  padding-left: 16rpx;
}
.login input.small{
  width: 240rpx;
}
.login label button{
  width: 220rpx; height: 72rpx; line-height: 72rpx;
  color: #fff; font-size: 32rpx;
  background: #00a0e9;
  margin-left: 20rpx;
}
.login > view > button{
  width: 660rpx; height: 96rpx; line-height: 96rpx;
  background: #009944;
  color: #fff; font-size: 36rpx;
  margin-bottom: 12rpx;
}
.tip{
  width: 720rpx;
  justify-content: flex-end;
  color:#00a0e9; font-size: 32rpx;
}
.tip text{
  width: 160rpx;
}
.login-type{
  width: 680rpx;
  margin: 72rpx auto;
  justify-content: space-around;
}
.login-type > text{
  width: 640rpx;
  margin: 0 auto;
  margin-bottom: 72rpx;
  color: #545454; font-size: 42rpx;
}
.login-type > view{
  width: 600rpx;
  justify-content: space-around;
  margin: 0 auto;
}
.login-type-image{
  width: 160rpx; height: 160rpx; line-height: 160rpx;
  border-radius: 50%;
  background: #dcdcdc;
  justify-content: center;
  align-items: center;
}
.login-type-image image{
  width: 120rpx; height: 120rpx;
  background: #fff;
  border-radius: 50%;
}
