/* pages/reg/reg.wxss */
.container{
  height: 1400rpx;
  background: #f5f5f5;
}
.title{
  margin: 24rpx 0 48rpx 0;
  justify-content: center;
}
.title text{
  font-size: 36rpx; color: #9d9d9d;
}
.reg{
  justify-content: center;
}
.reg > view{
  width: 660rpx;
  align-items: center;
  color: #646464;
}
.reg label{
  width: 725rpx; height: 72rpx;
  margin-bottom: 24rpx;
}
.reg label:last-of-type{
  margin-bottom: 128rpx;
}
.reg text{
  display: inline-block;
  width: 180rpx; height: 72rpx; line-height: 72rpx;
  text-align: right;
  margin-right: 24rpx;
}
.reg input{
  width: 480rpx; height: 72rpx;
  border-radius: 4px;
  background: #fff;
  display: inline-block;
  padding-left: 16rpx;
}
.reg input.small{
  width: 240rpx;
}
.reg label button{
  width: 220rpx; height: 72rpx; line-height: 72rpx;
  color: #fff; font-size: 32rpx;
  background: #00a0e9;
  margin-left: 20rpx;
}
.reg > view > button{
  width: 660rpx; height: 96rpx; line-height: 96rpx;
  background: #009944;
  color: #fff; font-size: 36rpx;
  margin-bottom: 18rpx;
}
.reg > view > button:first-of-type{
  background: #00a0e9;
}